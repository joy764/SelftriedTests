<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="log.pattern">
            %style{[%d{HH:mm:ss}]}{cyan} %highlight{%-5level} %style{%c{1}}{magenta} - %m%n
        </Property>
    </Properties>

    <Appenders>
        <!-- Console Appender with colors -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${log.pattern}" disableAnsi="false" charset="UTF-8"/>
        </Console>

        <!-- File Appender -->
        <File name="FileLogger" fileName="logs/test-log.log" append="true">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="debug"> <!-- show everything: debug, info, warn, error -->
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>
</Configuration>
